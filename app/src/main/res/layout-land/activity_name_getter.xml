<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InitialScreen"
    android:background="#F1E6C5">

    <TextView
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arbutus"
        android:text="ROCK PAPER SCISSOR BATTLE"
        android:id="@+id/tv_welcome"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textColor="#742A23"
        android:textSize="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Player 1 name"
        android:id="@+id/tv_player1"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textColor="#742A23"
        android:textSize="25dp"
        android:layout_below="@id/tv_welcome"
        android:layout_marginTop="29dp"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_player1"
        android:id="@+id/et_player1Name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Player 2 name"
        android:id="@+id/tv_player2"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textColor="#742A23"
        android:textSize="25dp"
        android:visibility="invisible"

        android:layout_below="@id/et_player1Name"
        android:layout_marginTop="19dp"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_player2"
        android:visibility="invisible"
        android:id="@+id/et_player2Name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>





    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/button_done"
        android:background="@drawable/normal_button_background"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="290dp"
        android:text="Done"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        />

</RelativeLayout>