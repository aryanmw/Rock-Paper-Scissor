<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinalActivity"
    android:background="#F1E6C5">

    <TextView
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arbutus"
        android:text="ROCK PAPER SCISSOR BATTLE"
        android:id="@+id/tv_welcome"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textColor="#742A23"
        android:textSize="30dp"/>
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/animation"
        app:lottie_loop="true"
        app:lottie_fileName="confetti.json"
        app:lottie_autoPlay="true"
        android:layout_below="@id/tv_welcome"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/tv_myResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/autour_one"
        android:textAlignment="center"
        android:textColor="#FF9800"
        android:textSize="30dp"
        tools:text="Player 1 won the game, congraturlation" />
    
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/normal_button_background"
        android:text="Play Again"
        android:id="@+id/button_playAgain"
        android:textColor="#ffffff"
        android:layout_below="@id/animation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
</RelativeLayout>